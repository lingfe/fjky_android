<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SmartBandsSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/smartBandsSettingBackIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_main"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="设备名称"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/modifyFacilityNameTv"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="修改" />

                </LinearLayout>

                <TextView
                    android:id="@+id/facilityNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:contentDescription="设备名称"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="xxx智能手环" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="设备ID"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:visibility="invisible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/facilityIdTv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:contentDescription="设备ID"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="SNJNSJUSN78976565" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="查看权限"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/editorPermissionTv"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="编辑" />

                </LinearLayout>

                <TextView
                    android:id="@+id/authorizedRelativesTv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:contentDescription="授权的亲戚们"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="亲友名称、亲友名称1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/familyNumberContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:contentDescription="亲情号码"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="亲情号码"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/volumeLevelContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:contentDescription="音量等级"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="音量等级"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tempUploadInterval"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:contentDescription="温度上传间隔"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="体温上传间隔设置"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/measuringTempContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:contentDescription="测量体温"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="立即测量体温"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressBookWhitelistContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="通讯录/白名单"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/heartRateUploadIntervalContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:contentDescription="心率上传间隔"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="心率上传间隔设置"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="GPS开关设置"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/gpsSwitchSwt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:contentDescription="GPS开关"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gpsUploadContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="GPS上传间隔"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lowPowerRemindContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:contentDescription="低电量提醒"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="低电提醒时段"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="黄键短信开关"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/smsSwitchSwt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:contentDescription="G短信开关"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/unBindFacilityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_button_round_red"
                android:contentDescription="解绑设备"
                android:gravity="center"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:text="解绑设备"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>