<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_main"
    android:orientation="vertical"
    tools:context=".ui.activity.ModifyPwdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/modifyPwdBackIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/modifyPwdTitleTv"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:paddingBottom="60dp">

        <TextView
            android:id="@+id/modifyUserPwdAccountTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="6dp"
            android:paddingBottom="14dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/modifyPwdOldUserPwdEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="请输入旧的登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="6dp"
            android:paddingBottom="14dp" />

        <EditText
            android:id="@+id/modifyPwdUserPwdEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="请输入新的登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="6dp"
            android:paddingBottom="14dp" />

        <EditText
            android:id="@+id/modifyPwdRepeatUserPwdEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="6dp"
            android:paddingBottom="14dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modifyPwdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_button_round_red"
        android:contentDescription="确定"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>