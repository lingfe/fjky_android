<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/facilityIconIv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="设备图标"
        android:padding="6dp"
        android:src="@drawable/icon_jiankang" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/facilityNameTv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:contentDescription="设备名称"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="智能摄像头名称名称名称" />

        <TextView
            android:id="@+id/facilityStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="设备状态"
            android:text="在线" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/facilitySettingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置" />

        <TextView
            android:id="@+id/facilityTypeNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="设备类型描述"
            android:maxLines="1"
            android:singleLine="true"
            android:text="--智能手环" />

    </LinearLayout>

</LinearLayout>