<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PersonalDetailsActivity">

    <LinearLayout
        android:id="@+id/meTitleBarContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/personalDetailsBackIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="返回上一界面"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="个人详细信息"
            android:gravity="center"
            android:singleLine="true"
            android:text="个人详细信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:visibility="invisible" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/personalNameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="姓名"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalNameTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请设置姓名"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalSexContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="性别"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalSexTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请选择性别"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalIdentityNumberContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="身份证号码"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="身份证号"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalIdentityNumberTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请设置身份证号码"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalBirthdayContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="生日"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="生日"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalBirthdayTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请选择出生日期"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalAgeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="年龄"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="年龄"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalAgeTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请选择年龄"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalNationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="民族"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="民族"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalNationTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请选择民族"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalHomeAddressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="户籍地址"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="户籍地址"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalHomeAddressTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请选择户籍地址"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalPhoneNumberContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="联系电话"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="联系电话"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalPhoneNumberTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="请填写联系电话"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalHobbyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="爱好"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="爱好"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalHobbyTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:hint="未选择爱好"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFE8E7E7" />

            <LinearLayout
                android:id="@+id/personalFoodProhibitionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="饮食禁忌"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="饮食禁忌"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/personalFoodProhibitionTv"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="填写饮食禁忌"
                    android:paddingStart="30dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_next" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>